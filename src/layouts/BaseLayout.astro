---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getLocale, locales } from "../i18n/ui";
import CookieBanner from "../islands/CookieBanner.jsx";
import GridSpotlight from "../islands/GridSpotlight.jsx";

type Props = {
  title?: string;
  description?: string;
  ogImage?: string;
  ogImageAlt?: string;
  ogType?: "website" | "article";
  robots?: string;
  meta?: string;
  jsonLd?: Record<string, unknown> | Array<Record<string, unknown>>;
};

const {
  title = "IA Operators",
  description,
  ogImage = "/og.png",
  ogImageAlt,
  ogType = "website",
  robots,
  meta,
  jsonLd,
} = Astro.props;

const publicSiteEnv = import.meta.env.PUBLIC_SITE_ENV;
const isProd = publicSiteEnv
  ? publicSiteEnv === "production"
  : Boolean(import.meta.env.PROD);

const effectiveRobots = robots
  ? isProd && robots.includes("noindex")
    ? "index,follow"
    : robots
  : undefined;

const locale = getLocale(Astro.currentLocale);
const defaultLocale = "es";
const site = Astro.site?.toString() ?? "https://iaoperators.com";

const pathname = Astro.url.pathname;
const basePath = pathname.replace(new RegExp(`^/${locale}(?=/|$)`), "") || "/";
const normalizedPath = basePath === "/" ? "" : basePath.replace(/^\/+/, "");

const ensureTrailingSlash = (value: string) => value.replace(/\/?$/, "/");

const buildLocaleUrl = (lang: string) => {
  const rawPath = `/${lang}/${normalizedPath}`;
  const path = ensureTrailingSlash(rawPath);
  return ensureTrailingSlash(new URL(path, site).toString());
};

const canonical = buildLocaleUrl(locale);
const alternates = locales.map((lang) => ({
  lang,
  href: buildLocaleUrl(lang),
}));
const xDefault = buildLocaleUrl(defaultLocale);

const ogImageUrl = ogImage.startsWith("http")
  ? ogImage
  : new URL(ogImage, site).toString();
const effectiveOgImageAlt = (ogImageAlt && ogImageAlt.trim()) || title;

const jsonLdItems = jsonLd ? (Array.isArray(jsonLd) ? jsonLd : [jsonLd]) : [];

// ===== Fallback global de meta description por idioma =====
const DEFAULT_DESCRIPTIONS: Record<string, string> = {
  es: "Automatización con IA para empresas: agentes, flujos no-code e integraciones para escalar operaciones y ventas.",
  pt: "Automação com IA para empresas: agentes, fluxos no-code e integrações para escalar operações e vendas.",
  en: "AI automation for businesses: agents, no-code workflows, and integrations to scale operations and sales.",
};

const effectiveDescription =
  (typeof description === "string" && description.trim()) ||
  DEFAULT_DESCRIPTIONS[locale] ||
  DEFAULT_DESCRIPTIONS[defaultLocale];

const OG_LOCALE_MAP: Record<string, string> = {
  pt: "pt_BR",
  en: "en_US",
  es: "es_ES",
};

const ogLocale = OG_LOCALE_MAP[locale] ?? locale;
---

<!doctype html>
<html lang={locale} class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={effectiveDescription} />
    <link rel="canonical" href={canonical} />

    {effectiveRobots && <meta name="robots" content={effectiveRobots} />}
    {meta && <meta name="keywords" content={meta} />}

    {alternates.map((a) => (
      <link rel="alternate" hreflang={a.lang} href={a.href} />
    ))}
    <link rel="alternate" hreflang="x-default" href={xDefault} />

    <!-- Open Graph -->
    <meta property="og:type" content={ogType} />
    <meta property="og:locale" content={ogLocale} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={effectiveDescription} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:alt" content={effectiveOgImageAlt} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={effectiveDescription} />
    <meta name="twitter:image" content={ogImageUrl} />

    {jsonLdItems.map((item) => (
      <script type="application/ld+json" set:html={JSON.stringify(item)} />
    ))}

    <link rel="icon" href="/favicon.ico" />
  </head>

  <body class="min-h-screen bg-background text-foreground">
    <!-- GridSpotlight precisa ser o wrapper global (camada de fundo + mask) -->
    <GridSpotlight client:load>
      <Header />
      <main class="pt-120px">
        <slot />
      </main>
      <Footer />
    </GridSpotlight>

    <!-- Elementos fixos/overlays fora do wrapper -->
    <CookieBanner client:idle />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
 
