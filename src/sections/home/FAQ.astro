---
const { faq } = Astro.props;
---

<section class="py-16">
  <div class="mx-auto max-w-4xl px-4">
    <h2 class="text-3xl md:text-4xl font-semibold">{faq.title}</h2>
    <div class="mt-8 space-y-4">
      {faq.items.map((item) => (
        <details class="rounded-2xl border border-border/60 bg-card px-5 py-4">
          <summary class="cursor-pointer font-medium">{item.q}</summary>
          <p class="mt-3 text-sm text-muted-foreground">{item.a}</p>
        </details>
      ))}
    </div>
  </div>
</section>
