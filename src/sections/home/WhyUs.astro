---
import IndustriesCarousel from "../../islands/IndustriesCarousel";


const { why, industries } = Astro.props;

const CARD_BG_IMG = "https://framerusercontent.com/images/EaQHg2lXGfJYdlkVzsdOTUA4AIk.png";
---

<section id="why-us" class="py-20 px-4 bg-transparent">
  <div class="max-w-6xl mx-auto text-center">
    <span class="inline-block px-4 py-1 rounded-full bg-white/10 border border-white/10 text-orange-400 text-xs font-semibold mb-4">
      {why.badge}
    </span>

    <h2 class="text-3xl md:text-5xl font-bold mb-6 text-white whitespace-pre-line">
      {why.title}
    </h2>

    <p class="text-gray-400 mb-16 max-w-2xl mx-auto text-lg">
      {why.subtitle}
    </p>

    <div class="px-4 md:px-12">
      <!-- Ilha React: carousel (interativo) -->
      <IndustriesCarousel
        client:visible
        industries={industries}
        cardBgImg={CARD_BG_IMG}
      />
    </div>
  </div>
</section>
