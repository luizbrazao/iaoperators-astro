---
const { locale, hero } = Astro.props;

// Logos reais (copiados do projeto antigo)
const CLIENT_LOGOS = [
  { src: "https://framerusercontent.com/images/I1wOV1ANvz2kjm9Nizhr55pPIw.svg", alt: "Logo 1" },
  { src: "https://framerusercontent.com/images/jIr0xYu3NSOdp85hE2MOfh3n08.svg", alt: "Logo 2" },
  { src: "https://ia-operators.s3.eu-north-1.amazonaws.com/IA+Operators+Website/langchain.png", alt: "Langchain" },
  { src: "https://ia-operators.s3.eu-north-1.amazonaws.com/IA+Operators+Website/python.png", alt: "Python" },
  { src: "https://framerusercontent.com/images/ehpQahXwn3Ty8pZgITOrAuWfg.svg", alt: "Logo 3" },
  { src: "https://framerusercontent.com/images/AooL8oU753lZxBYLBdVW5kQvMIk.svg", alt: "Logo 4" },
  { src: "https://framerusercontent.com/images/vIm7LiKUVeEITGlq8t6Tn4nVxGw.svg", alt: "Logo 5" }
];

const LOGOS_REPEATED = [...CLIENT_LOGOS, ...CLIENT_LOGOS, ...CLIENT_LOGOS, ...CLIENT_LOGOS];
---

<style is:global>
@keyframes infinite-scroll {
  from { transform: translateX(0); }
  to { transform: translateX(-50%); }
}
.animate-infinite-scroll {
  animation: infinite-scroll 40s linear infinite;
}
</style>

<section class="relative flex flex-col items-center justify-center pt-[120px] pb-10 px-4 min-h-[50vh] overflow-visible">
  <div class="relative z-10 w-full max-w-7xl text-center">
    <h1 class="text-5xl md:text-7xl font-medium tracking-tight leading-tight mb-10">
      <span class="text-orange-500">
        <!-- Mobile -->
        <span class="md:hidden">
          {hero.titleHighlightMobile}
        </span>

        <!-- Desktop -->
        <span class="hidden md:inline">
          {hero.titleHighlight}
        </span>
      </span>

      <br class="hidden md:block" />

      <span class="text-white">
        {hero.titleRest}
      </span>
    </h1>

    <p class="text-base md:text-xl text-gray-400 mb-12 max-w-4xl mx-auto font-normal">
      {hero.subtitle}
    </p>

    <a
      href={`/${locale}/contact/`}
      class="inline-flex items-center gap-2 px-8 py-3 rounded-full bg-black text-orange-500 border border-orange-500/30 font-medium text-lg hover:bg-orange-500/10 hover:scale-105 transition-all duration-300"
    >
      {hero.cta}
    </a>
  </div>

  <!-- Carrossel de logos -->
  <div class="relative z-10 mt-20 w-full max-w-5xl mx-auto">
    <p class="text-center text-gray-500 mb-8 text-sm uppercase tracking-widest">
      {hero.tech}
    </p>

    <div class="w-full inline-flex flex-nowrap overflow-hidden mask-[linear-gradient(to_right,transparent_0,black_100px,black_calc(100%-100px),transparent_100%)]">
      <ul class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll">
        {LOGOS_REPEATED.map((logo, index) => (
          <li>
            <img
              src={logo.src}
              alt={logo.alt}
              class="h-8 md:h-10 w-auto opacity-50 grayscale hover:grayscale-0 hover:opacity-100 transition-all duration-300"
              loading="lazy"
              decoding="async"
            />
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>
